
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Allow users to create their own credit report summaries
    match /credit_reports/{reportId} {
      allow read: if request.auth != null && request.auth.uid == resource.data.userId;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }

    // Allow users to create their own training candidates
    match /training_candidates/{candidateId} {
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
      // Admins should be able to read/update, but for now, we'll keep it simple.
      allow read, update: if request.auth != null; 
    }

  }
}
