rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Only allow authenticated users to read or write documents.
    // Users can only access documents where their userId matches the document's userId field.
    match /credit_reports/{reportId} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
    }
    
    // Allow users to create documents in the 'credit_reports' collection
    // as long as the new document's userId matches their own.
    match /credit_reports/{reportId} {
        allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
    }
  }
}
