rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Lock down all documents by default
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow users to read and write their own credit reports.
    // This rule assumes that each document in the 'credit_reports' collection
    // has a 'userId' field that matches the UID of the authenticated user.
    match /credit_reports/{reportId} {
      allow read, create: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }
  }
}
