rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Deny all read/write access to all documents by default
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow public read access to the creditReports collection
    match /creditReports/{reportId} {
      allow read: if true;
      allow write: if false; // Keep writes restricted
    }
  }
}
