rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
      // Logged-in users can read and write any document.
      // This is a simple rule for getting started.
      // For a production app, you would want to implement more granular security.
      allow read, write: if request.auth != null;
    }
  }
}
