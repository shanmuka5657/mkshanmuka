{
  "name": "CreditWise AI",
  "short_name": "CreditWise",
  "description": "Advanced AI Credit Score Analyzer & ML Model Trainer",
  "start_url": "/",
  "display": "standalone",
  "display_override": [
    "window-controls-overlay"
  ],
  "background_color": "#ffffff",
  "theme_color": "#4361ee",
  "icons": [
    {
      "src": "/icons/icon-192x192.png",
      "sizes": "192x192",
      "type": "image/png"
    },
    {
      "src": "/icons/icon-512x512.png",
      "sizes": "512x512",
      "type": "image/png"
    },
    {
      "src": "/icons/maskable_icon.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "maskable"
    }
  ],
  "id": "/?source=pwa",
  "launch_handler": {
    "client_mode": [
      "navigate-existing",
      "auto"
    ]
  },
  "orientation": "portrait",
  "screenshots": [
    {
      "src": "/screenshots/screenshot1.png",
      "sizes": "1080x1920",
      "type": "image/png",
      "label": "Analyze your credit report with AI"
    },
    {
      "src": "/screenshots/screenshot2.png",
      "sizes": "1080x1920",
      "type": "image/png",
      "label": "Get detailed risk assessments and loan eligibility"
    }
  ],
  "categories": [
    "finance",
    "utilities"
  ],
  "dir": "ltr",
  "lang": "en-US",
  "prefer_related_applications": false,
  "related_applications": [],
  "scope": "/",
  "scope_extensions": [
    { "origin": "*.firebaseapp.com" },
    { "origin": "*.web.app" }
  ],
  "shortcuts": [
    {
      "name": "Credit Analysis",
      "short_name": "Credit",
      "description": "Analyze a CIBIL credit report",
      "url": "/credit",
      "icons": [{ "src": "/icons/shortcut-credit.png", "sizes": "96x96" }]
    },
    {
      "name": "Verify PDF",
      "short_name": "Verify",
      "description": "Run forensic analysis on a PDF",
      "url": "/verify",
      "icons": [{ "src": "/icons/shortcut-verify.png", "sizes": "96x96" }]
    }
  ],
  "share_target": {
    "action": "/share-target",
    "method": "GET",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url"
    }
  },
  "widgets": [
    {
      "name": "CreditWise AI Quick Actions",
      "description": "Access key features of CreditWise AI from your home screen.",
      "tag": "actions",
      "template": "actions",
      "ms_ac_template": "actions",
      "data": {
        "items": [
          {
            "tag": "credit",
            "label": "Analyze Report",
            "icon": "/icons/widget-credit.png",
            "action": {
              "type": "open-page",
              "page": "/credit"
            }
          },
          {
            "tag": "verify",
            "label": "Verify Document",
            "icon": "/icons/widget-verify.png",
            "action": {
              "type": "open-page",
              "page": "/verify"
            }
          }
        ]
      }
    }
  ]
}
