{
  "name": "CreditWise AI",
  "short_name": "CreditWise",
  "description": "Advanced AI Credit Score Analyzer & ML Model Trainer",
  "start_url": "/",
  "display": "standalone",
  "orientation": "portrait",
  "background_color": "#f5f7fa",
  "theme_color": "#4361ee",
  "icons": [
    {
      "src": "/icons/icon-192x192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "/icons/icon-512x512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "/icons/icon-192x192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "maskable"
    },
    {
      "src": "/icons/icon-512x512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "maskable"
    }
  ],
  "display_override": [
    "standalone",
    "window-controls-overlay"
  ],
  "share_target": {
    "action": "/share-target",
    "method": "GET",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url"
    }
  },
  "shortcuts": [
    {
      "name": "Credit Analysis",
      "short_name": "Credit",
      "description": "Analyze a CIBIL credit report",
      "url": "/credit",
      "icons": [
        {
          "src": "/icons/icon-192x192.png",
          "sizes": "192x192"
        }
      ]
    },
    {
      "name": "Verify PDF",
      "short_name": "Verify",
      "description": "Run a forensic analysis on a PDF",
      "url": "/verify",
      "icons": [
        {
          "src": "/icons/icon-192x192.png",
          "sizes": "192x192"
        }
      ]
    }
  ],
  "widgets": [
    {
      "name": "CreditWise AI Summary",
      "description": "Quick access to your credit tools",
      "tag": "creditwise-summary",
      "template": "summary_template",
      "ms_ac_template": "summary_template",
      "data": "{}",
      "screenshots": [
        {
          "src": "/icons/icon-512x512.png",
          "sizes": "512x512",
          "label": "Summary Widget Screenshot"
        }
      ],
      "icons": [
        {
          "src": "/icons/icon-192x192.png",
          "sizes": "192x192"
        }
      ],
      "auth": false,
      "update": 86400
    }
  ],
  "edge_side_panel": {
    "preferred_width": 480
  },
  "file_handlers": [
    {
      "action": "/verify",
      "accept": {
        "application/pdf": [
          ".pdf"
        ]
      }
    }
  ],
  "handle_links": "auto",
  "protocol_handlers": [
    {
      "protocol": "web+creditwise",
      "url": "/credit?launch_url=%s"
    }
  ],
  "related_applications": [],
  "scope_extensions": [
    {
      "origin": "*.mkcreditwise.com"
    }
  ],
  "background_sync": {},
  "periodic_background_sync": {},
  "push_notifications": {
      "show_trigger": {
        "type": "timestamp",
        "timestamp": 0
      }
  }
}
