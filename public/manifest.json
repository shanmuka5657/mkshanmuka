{
  "name": "CreditWise AI",
  "short_name": "CreditWise",
  "description": "Advanced AI Credit Score Analyzer & ML Model Trainer",
  "start_url": "/",
  "display": "standalone",
  "background_color": "#F0F2F5",
  "theme_color": "#3F51B5",
  "scope": "/",
  "lang": "en-US",
  "categories": [
    "finance",
    "utilities"
  ],
  "icons": [
    {
      "src": "https://placehold.co/192x192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "https://placehold.co/512x512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "https://placehold.co/192x192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "maskable"
    },
    {
      "src": "https://placehold.co/512x512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "maskable"
    }
  ],
  "shortcuts": [
    {
      "name": "Analyze Credit Report",
      "short_name": "Analyze",
      "description": "Upload a CIBIL report for AI analysis",
      "url": "/credit",
      "icons": [{ "src": "https://placehold.co/96x96.png", "sizes": "96x96" }]
    },
    {
      "name": "Verify PDF Document",
      "short_name": "Verify",
      "description": "Run a forensic check on a PDF document",
      "url": "/verify",
      "icons": [{ "src": "https://placehold.co/96x96.png", "sizes": "96x96" }]
    },
    {
      "name": "Cross-Verify Documents",
      "short_name": "Cross-Verify",
      "description": "Compare details across multiple documents",
      "url": "/cross-verify",
      "icons": [{ "src": "https://placehold.co/96x96.png", "sizes": "96x96" }]
    }
  ],
  "share_target": {
    "action": "/credit",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "pdf",
          "accept": ["application/pdf", ".pdf"]
        }
      ]
    }
  },
  "file_handlers": [
    {
      "action": "/credit",
      "accept": {
        "application/pdf": [".pdf"]
      },
      "launch_type": "single-client"
    }
  ],
  "protocol_handlers": [
    {
      "protocol": "web+creditwise",
      "url": "/?protocol=%s"
    }
  ],
  "handle_links": "auto"
}
