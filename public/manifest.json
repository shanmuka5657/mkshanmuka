{
  "name": "CreditWise AI",
  "short_name": "CreditWise",
  "description": "Advanced AI Credit Score Analyzer & ML Model Trainer",
  "icons": [
    {
      "src": "/icons/icon-192x192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "/icons/icon-384x384.png",
      "sizes": "384x384",
      "type": "image/png"
    },
    {
      "src": "/icons/icon-512x512.png",
      "sizes": "512x512",
      "type": "image/png"
    }
  ],
  "theme_color": "#4361ee",
  "background_color": "#f5f7fa",
  "start_url": "/",
  "display": "standalone",
  "orientation": "portrait",
  "id": "/?source=pwa",
  "scope": "/",
  "lang": "en-US",
  "dir": "ltr",
  "categories": ["finance", "utilities", "business"],
  "prefer_related_applications": false,
  "related_applications": [],
  "display_override": [
    "standalone",
    "minimal-ui",
    "window-controls-overlay"
  ],
  "launch_handler": {
    "client_mode": "navigate-existing"
  },
  "screenshots": [
    {
      "src": "/screenshots/screenshot1.png",
      "type": "image/png",
      "sizes": "1080x1920",
      "form_factor": "narrow"
    },
    {
      "src": "/screenshots/screenshot2.png",
      "type": "image/png",
      "sizes": "1080x1920",
      "form_factor": "narrow"
    }
  ],
  "share_target": {
    "action": "/share-target",
    "method": "GET",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url"
    }
  },
  "shortcuts": [
    {
      "name": "Credit Analysis",
      "short_name": "Analyze",
      "description": "Analyze a CIBIL credit report",
      "url": "/credit",
      "icons": [{ "src": "/icons/shortcut-credit.png", "sizes": "192x192" }]
    },
    {
      "name": "Verify PDF",
      "short_name": "Verify",
      "description": "Run forensic analysis on a PDF",
      "url": "/verify",
      "icons": [{ "src": "/icons/shortcut-verify.png", "sizes": "192x192" }]
    }
  ],
  "widgets": [
    {
      "name": "CreditWise AI Summary",
      "description": "Quick access to your credit tools.",
      "tag": "creditwise-summary",
      "template": "summary_template",
      "ms_ac_template": "summary_template",
      "data": {
        "title": "CreditWise AI",
        "steps": [
          {
            "label": "Analyze Report",
            "url": "/credit"
          },
          {
            "label": "Verify Document",
            "url": "/verify"
          }
        ]
      },
      "screenshots": [
        {
          "src": "/screenshots/widget-preview.png",
          "sizes": "600x400",
          "type": "image/png"
        }
      ],
      "icons": [
        {
          "src": "/icons/icon-192x192.png",
          "sizes": "192x192",
          "type": "image/png"
        }
      ],
      "auth": false,
      "update": 86400
    }
  ],
  "edge_side_panel": {
    "preferred_width": 400
  },
  "file_handlers": [
    {
      "action": "/verify",
      "accept": {
        "application/pdf": [".pdf"]
      }
    }
  ],
  "handle_links": "auto",
  "protocol_handlers": [
    {
      "protocol": "web+creditwiseai",
      "url": "/creditwiseai?q=%s"
    }
  ]
}
