{
  "name": "CreditWise AI",
  "short_name": "CreditWise",
  "description": "Advanced AI Credit Score Analyzer & ML Model Trainer",
  "start_url": "/",
  "display": "standalone",
  "background_color": "#F0F2F5",
  "theme_color": "#3F51B5",
  "scope": "/",
  "lang": "en-US",
  "categories": [
    "finance",
    "utilities"
  ],
  "icons": [
    {
      "src": "https://placehold.co/192x192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "https://placehold.co/512x512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "https://placehold.co/192x192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "maskable"
    },
    {
      "src": "https://placehold.co/512x512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "maskable"
    }
  ],
  "shortcuts": [
    {
      "name": "Analyze Credit Report",
      "short_name": "Analyze",
      "description": "Go to the credit analysis page",
      "url": "/credit",
      "icons": [{ "src": "https://placehold.co/96x96.png", "sizes": "96x96" }]
    },
    {
      "name": "Verify a PDF",
      "short_name": "Verify",
      "description": "Go to the PDF verification page",
      "url": "/verify",
      "icons": [{ "src": "https://placehold.co/96x96.png", "sizes": "96x96" }]
    }
  ],
  "file_handlers": [
    {
      "action": "/credit",
      "accept": {
        "application/pdf": [".pdf"]
      }
    }
  ],
  "share_target": {
    "action": "/credit",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "pdfFile",
          "accept": ["application/pdf"]
        }
      ]
    }
  },
  "handle_links": "auto",
  "protocol_handlers": [
    {
      "protocol": "web+creditwise",
      "url": "/?url=%s"
    }
  ],
  "display_override": [
    "window-controls-overlay",
    "standalone"
  ],
  "edge_side_panel": {
    "preferred_width": 480
  },
  "widgets": [
    {
      "name": "CreditWise Quick Actions",
      "description": "Quickly access CreditWise AI features.",
      "tag": "creditwise-widget",
      "template": "creditwise-widget-template",
      "ms_ac_template": "creditwise-widget-template",
      "data": "{}"
    }
  ]
}
