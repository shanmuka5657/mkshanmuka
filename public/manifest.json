{
  "name": "CreditWise AI",
  "short_name": "CreditWiseAI",
  "start_url": "/?source=pwa",
  "display": "standalone",
  "background_color": "#f5f7fa",
  "theme_color": "#4361ee",
  "orientation": "portrait",
  "description": "Advanced AI Credit Score Analyzer & ML Model Trainer",
  "icons": [
    {
      "src": "/icon-192x192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "/icon-512x512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any maskable"
    }
  ],
  "screenshots": [
    {
      "src": "/screenshots/mobile.png",
      "sizes": "1080x1920",
      "type": "image/png",
      "form_factor": "narrow"
    },
    {
      "src": "/screenshots/desktop.png",
      "sizes": "1920x1080",
      "type": "image/png",
      "form_factor": "wide"
    }
  ],
  "display_override": [
    "window-controls-overlay",
    "minimal-ui"
  ],
  "edge_side_panel": {
    "preferred_width": 400
  },
  "file_handlers": [
    {
      "action": "/process-file",
      "accept": {
        "application/pdf": [
          ".pdf"
        ],
        "application/json": [
          ".json"
        ]
      }
    }
  ],
  "handle_links": "preferred",
  "launch_handler": {
    "client_mode": "focus-existing"
  },
  "protocol_handlers": [
    {
      "protocol": "web+creditwise",
      "url": "/handle-protocol?url=%s"
    }
  ],
  "share_target": {
    "action": "/share-target",
    "method": "GET",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url"
    }
  },
  "shortcuts": [
    {
      "name": "New Analysis",
      "short_name": "Analyze",
      "url": "/credit",
      "icons": [
        {
          "src": "/icon-192x192.png",
          "sizes": "192x192"
        }
      ]
    }
  ],
  "widgets": [
    {
      "name": "Credit Score Summary",
      "tag": "credit-score",
      "template": "credit-widget",
      "ms_ac_template": "/widgets/score.html",
      "data": "/widgets/score.json"
    }
  ]
}
